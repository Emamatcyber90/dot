# Open a terminal:
alt + Return
  gnome-terminal

# Bin-in-path program launcher:
super + @space
  PATH="$HOME/bin:$PATH" dmenu_run

# GUI program launcher (from start menu):
super + shift + @space
  j4-dmenu-desktop

# Make sxhkd reload its configuration files:
super + Escape
  pkill -USR1 -x sxhkd && for i in $(bspc query -M --names); do bspc monitor $i -d I II; done

# Quit bspwm normally:
alt + super + Escape
  pkill -x panel; bspc quit

# Close and kill apps:
alt + {_,shift + }w
  bspc node -{c,k}

# Alternate between tiled and monocle layout:
alt + m
  bspc desktop -l next

# Set the window state
alt + {t,shift + t,s,f}
  bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

# Move layer up or down:
alt + {_,shift +}v
  copyq toggle && bspc node --layer {above,below}

# focus the node in the given direction
alt + {h,j,k,l}
  bspc node -f {west,south,north,east}

# Move the node to the monitor in the given direction and focus it.
alt + shift + {h,j,k,l}
  DIR={west,south,north,east}; \
  bspc node -m "$DIR"; \
  bspc node -f "$DIR"

# Focus the next/previous desktop in the current monitor
alt + bracket{left,right}
  bspc desktop -f {prev,next}.local

# Focus the last node/desktop
alt + {grave,Tab}
  bspc {node,desktop} -f last

# Focus the older or newer node in the focus history
alt + {o,i}
  bspc wm -h off; \
  bspc node {older,newer} -f; \
  bspc wm -h on
