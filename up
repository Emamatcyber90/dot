#!/bin/sh

# Setup zsh.
. ./setup/zsh.sh

# Setup vim.
. ./setup/vim.sh

# Setup rust.
. ./setup/rust.sh

if [ "$(uname)" = Darwin ]; then # macOS specific stuff.
  # Mac brew/shell/
elif [ "$(uname)" = Linux ]; then # Linux specific stuff.
  case "$(uname -v)" in
    *Ubuntu* | *ubuntu*) # Ubuntu specific setup.
      # Ubuntu app setup.
      . ./setup/ubu.sh

      # pulseaudio setup.
      . ./setup/pulseaudio.sh

      # Dmenu (Super-key search equivalent).
      . ./setup/dmenu.sh
      ;;
      # Other setup would go here.
  esac
fi

# Setup atom.
. ./setup/atom.sh

# Setup dotfile symlinks.
./rcme
